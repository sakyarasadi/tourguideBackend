# ===== Flask Configuration =====
FLASK_ENV=development
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# ===== Bot Configuration =====
BOT_NAME=AI Assistant Bot
BOT_VERSION=1.0.1
BOT_DESCRIPTION=AI-powered chatbot service

# ===== LLM Configuration =====
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_FLASH_API_KEY=your-gemini-api-key-here
LLM_MODEL=gemini-2.5-flash
LLM_TEMPERATURE=0

# ===== Firebase Configuration =====
# Path to Firebase service account JSON file (download from Firebase Console)
# Example: /path/to/firebase-adminsdk-xxxxx.json
FIREBASE_CREDENTIALS_PATH=path/to/your-firebase-credentials.json

# Firebase Project ID (found in Firebase Console)
FIREBASE_PROJECT_ID=your-firebase-project-id

# Firebase Storage Bucket (found in Firebase Console)
# Example: your-project-id.appspot.com
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Firestore Collection Names (optional, defaults provided)
FIRESTORE_COLLECTION_MESSAGES=messages
FIRESTORE_COLLECTION_SESSIONS=sessions
FIRESTORE_COLLECTION_COUNTERS=counters

# ===== Redis Configuration =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===== Session Configuration =====
# Session TTL in seconds (default: 86400 = 24 hours)
SESSION_TTL_SECONDS=86400
REDIS_SESSION_PREFIX=bot_chat_session:

# ===== Conversation Management =====
# Maximum number of past messages to include in LLM context
MAX_CONVERSATION_HISTORY_MESSAGES=10

# ===== RAG Configuration =====
# Path to sentence transformer model (optional, will download if not found)
SENTENCE_TRANSFORMER_MODEL_PATH=/app/models/all-mpnet-base-v2
SENTENCE_TRANSFORMERS_HOME=/app/models

# Number of documents to retrieve from knowledge base
RAG_TOP_K=4

# ===== CORS Configuration =====
# Comma-separated list of allowed origins, or * for all
CORS_ORIGINS=*

# ===== Logging =====
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO


